- form_for @search do |f|
  - f.fields_for @search.conditions do |<%= plural_name %>|
    = <%= plural_name %>.label :daddy_contains, t(:daddy)
    = <%= plural_name %>.text_field :daddy_contains, :size => 12
    = <%= plural_name %>.label :mommy_contains, t(:mommy)
    = <%= plural_name %>.text_field :mommy_contains, :size => 12
    = <%= plural_name %>.label :body, t(:body) 
    = <%= plural_name %>.text_field :body_contains, :size => 20
    = <%= plural_name %>.label :wedding_after, t(:wedding_after)   
    = <%= plural_name %>.date_select :wedding_after
  = f.submit "Search"