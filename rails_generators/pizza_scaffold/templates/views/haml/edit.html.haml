- title t(:title, :model => <%= class_name %>.human_name)

<%= render_form %>

<%- if actions? :show, :index -%>
%ol.actions
  <%- if action? :show -%>
  %li.cancel= link_to t(:cancel), <%= singular_name %>_path(@<%= singular_name %>), :confirm => h(t(:confirm))
  <%- end -%>
  <%- if action? :index -%>
  %li.index= link_to t(:index), <%= plural_name %>_path
  <%- end -%>
<%- end -%>
